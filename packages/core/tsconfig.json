{
  "extends": "@ocmo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./*"],
      "@adapters/*": ["adapters/*"],
      "@entities/*": ["entities/*"],
      "@repositories/*": ["repositories/*"],
      "@use_cases/*": ["use_cases/*"],
      "@lib/*": ["lib/*"],
      "@clients/*": ["clients/*"],
      "@database/*": ["database/*"]
    }
  },
  "include": [
    "adapters/**/*.ts",
    "entities/**/*.ts",
    "repositories/**/*.ts",
    "use_cases/**/*.ts",
    "lib/**/*.ts",
    "clients/**/*.ts",
    "database/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.js",
    "**/*.test.js"
  ]
}
